
@model Book


<div class="container-fluid">
    <h1 class="mx-3">Create Book</h1>
    <div class="row justify-content-center flex-column align-items-center">
        <form class="col-md-8" asp-action="create" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Code">Code</label>
                    <input asp-for="Code" class="form-control" placeholder="Code">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="6" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

           
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="SalePrice">SalePrice</label>
                    <input asp-for="SalePrice" class="form-control" placeholder="SalePrice">
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CostPrice">CostPrice</label>
                    <input asp-for="CostPrice" class="form-control" placeholder="CostPrice">
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="DiscountPercent">DiscountPercent</label>
                    <input asp-for="DiscountPercent" class="form-control" placeholder="DiscountPercent">
                    <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Tax">Tax</label>
                    <input asp-for="Tax" class="form-control" placeholder="Tax">
                    <span asp-validation-for="Tax" class="text-danger"></span>
                </div>
               
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="AuthorId">Author</label>
                    <select asp-for="AuthorId" class="form-select" aria-label="Default select example" style="margin-left:10px">
                        @foreach (var author in ViewBag.Authors)
                        {
                            <option value="@author.Id">@author.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="GenreId">Genre</label>
                    <select asp-for="GenreId" class="form-select" aria-label="Default select example" style="margin-left:10px">
                        @foreach (var genre in ViewBag.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="TagIds">Tag</label>
                    <select asp-for="TagIds" class="form-select" aria-label="Default select example" style="margin-left:10px">
                        @foreach (var tag in ViewBag.Tags)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TagIds" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-6">
                    <label asp-for="BookPosterImagefiles" class="form-label">BookPosterImageFile</label>
                    <input asp-for="BookPosterImagefiles" class="form-control">
                    <span asp-validation-for="BookPosterImagefiles" style="color:red"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="BookHoverImageFiles" class="form-label">BookHoverImageFile</label>
                    <input asp-for="BookHoverImageFiles" class="form-control">
                    <span asp-validation-for="BookHoverImageFiles" style="color:red"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="BookImageFiles" class="form-label">ImageFiles</label>
                    <input asp-for="BookImageFiles" class="form-control">
                    <span asp-validation-for="BookImageFiles" style="color:red"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsAvailable">
                    <label class="form-check-label" asp-for="IsAvailable">
                        IsAvailable
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
